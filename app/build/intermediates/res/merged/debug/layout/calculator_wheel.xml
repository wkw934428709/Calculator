<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_more"
        android:orientation="horizontal">


        <com.tct.calculator.view.scrollwheel.WheelView
            android:id="@+id/left_wheel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.tct.calculator.view.scrollwheel.WheelView
            android:id="@+id/right_wheel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bt_left_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/popuwindow_bottom_more_btn_marginTop"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|center"
            android:paddingLeft="35dp"
            android:fontFamily="Roboto-Regular"
            android:text="@string/bt_right_more"
            android:textColor="#474747"
            android:textSize="@dimen/Currency_wheel_view_more_textSize"
            android:visibility="gone"/>

        <Button
            android:id="@+id/bt_right_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/popuwindow_bottom_more_btn_marginTop"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|center"
            android:fontFamily="Roboto-Regular"
            android:paddingLeft="35dp"
            android:text="@string/bt_right_more"
            android:textColor="#474747"
            android:textSize="@dimen/Currency_wheel_view_more_textSize"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>