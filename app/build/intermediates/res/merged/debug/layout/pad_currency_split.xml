<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/color_status_bar_advenced_bg">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/digit_7"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/digit_7"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/digit_4"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/digit_4"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/digit_1"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/digit_1"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/dec_point"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/dec_point_rel4"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/digit_8"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/digit_8"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/digit_5"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/digit_5"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/digit_2"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/digit_2"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/digit_0"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_span="2"
                android:layout_weight="1"
                android:text="@string/digit_0"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/digit_9"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/digit_9"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/digit_6"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/digit_6"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/digit_3"
                style="@style/PadButtonStyle.Numeric.PortHalf.Multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/digit_3"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/currency_ic_xe"
                style="@style/PadButtonStyle.Operator.Text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:visibility="invisible"
                android:src="@drawable/ic_currency_xe"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/color_keyboard_bg_more_dark"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/currency_op_div"
                style="@style/PadButtonStyle.Operator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_op_div"
                android:text="@string/op_div"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/currency_op_mul"
                style="@style/PadButtonStyle.Operator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_op_mul"
                android:text="@string/op_mul"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/currency_op_sub"
                style="@style/PadButtonStyle.Operator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_op_sub"
                android:text="@string/op_sub"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/currency_op_add"
                style="@style/PadButtonStyle.Operator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_op_add"
                android:text="@string/op_add"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_panel_right_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/currency_clear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_del"
                android:scaleType="center"
                android:src="@drawable/ic_delete_convert"/>

            <ImageView
                android:id="@+id/currency_convert"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/ic_convert_exchange"/>


            <ImageView
                android:id="@+id/currency_expend"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_del"
                android:scaleType="center"
                android:src="@drawable/ic_show_chart"
                android:textColor="@android:color/darker_gray"/>


            <Button
                android:id="@+id/currency_eq"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/equals_bg2"
                android:contentDescription="@string/desc_eq"
                android:text="@string/eq"
                android:textColor="@android:color/white"
                android:textSize="@dimen/keyboard_equal_text_size"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>