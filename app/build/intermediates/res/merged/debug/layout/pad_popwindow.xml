<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calculator_edittext_bg">


    <include
        android:id="@+id/currency_wheel_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popupWindow_layout_height"
        layout="@layout/currency_wheel_layout"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="right">

        <Button
            android:id="@+id/pop_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/wheel_picker_btn"
            android:textColor="@color/color_green_button"
            android:text="@string/pop_cancel"/>

        <Button
            android:id="@+id/pop_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/wheel_picker_btn"
            android:textColor="@color/color_green_button"
            android:text="@string/pop_ok"/>

    </LinearLayout>

</LinearLayout>