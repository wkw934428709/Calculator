<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/currency_list_title_layout_height"
        android:background="@color/historyhead_background"
        android:gravity="center_vertical">

        <View
            android:id="@+id/back_imageview"
            android:layout_width="@dimen/currency_list_title_image_size"
            android:layout_height="@dimen/currency_list_title_image_size"
            android:background="@drawable/ic_back"
            android:layout_marginLeft="@dimen/currency_list_title_back_view_padding_left"/>

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:background="@null"
            android:textColor="#87ffffff"
            android:textSize="@dimen/currency_list_title_edit_textSize"
            android:hint="@string/search_edit_hint"/>

        <View
            android:id="@+id/cancel_text"
            android:layout_width="@dimen/currency_list_title_image_size"
            android:layout_height="@dimen/currency_list_title_image_size"
            android:background="@drawable/ic_currency_clear"
            android:layout_marginRight="@dimen/currency_list_title_cancel_view_padding_right"/>

    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/scrollbar_bg"

        android:background="@android:color/white">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>