<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_status_bar_advenced_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_741"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/digit_7_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_7"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/digit_4_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_4"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/digit_1_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/dec_point_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/dec_point_rel4"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_8520"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/digit_8_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_8"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/digit_5_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_5"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/digit_2_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_2"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/digit_0_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_0"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_963"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/digit_9_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_9"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/digit_6_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_6"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/digit_3_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_3"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/blank_convert"
                style="@style/PadButtonStyle.Numeric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:text="@string/digit_3"
                android:textColor="@color/white"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_operater"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/color_keyboard_bg_more_dark"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/op_div_convert"
                style="@style/PadButtonStyle.Operator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_op_div"
                android:onClick="onButtonClick"
                android:text="@string/op_div"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/op_mul_convert"
                style="@style/PadButtonStyle.Operator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_op_mul"
                android:onClick="onButtonClick"
                android:text="@string/op_mul"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/op_sub_convert"
                style="@style/PadButtonStyle.Operator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_op_sub"
                android:onClick="onButtonClick"
                android:text="@string/op_sub"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/op_add_convert"
                style="@style/PadButtonStyle.Operator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_op_add"
                android:onClick="onButtonClick"
                android:text="@string/op_add"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_func"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_panel_right_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/del_convert"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_del"
                android:onClick="onButtonClick"
                android:scaleType="center"
                android:src="@drawable/ic_delete_convert" />

            <ImageView
                android:id="@+id/clr_convert"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_clr"
                android:onClick="onButtonClick"
                android:scaleType="center"
                android:src="@drawable/ic_delete_convert"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/exchange"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_del"
                android:onClick="onButtonClick"
                android:scaleType="center"
                android:src="@drawable/ic_convert_exchange" />

            <ImageView
                android:id="@+id/slide_menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_del"
                android:onClick="onButtonClick"
                android:scaleType="center"
                android:src="@drawable/ic_convert_slide_menu"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/eq_convert"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/equals_bg2"
                android:contentDescription="@string/desc_eq"
                android:onClick="onButtonClick"
                android:padding="0dp"
                android:text="@string/eq"
                android:textColor="@android:color/white"
                android:textSize="@dimen/keyboard_equal_text_size"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>