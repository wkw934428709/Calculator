<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/display"
            layout="@layout/display_multiwindow_land" />

        <com.tct.calculator.CalculatorPadViewPager
            android:id="@+id/pad_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/display"
            android:layout_marginTop="@dimen/below_display_margin"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/pad_numeric_multiwindow_land" />

                <include layout="@layout/pad_operator_one_col" />

            </LinearLayout>

            <include layout="@layout/pad_advanced_multiwindow_land" />

        </com.tct.calculator.CalculatorPadViewPager>

    </RelativeLayout>
</FrameLayout>
